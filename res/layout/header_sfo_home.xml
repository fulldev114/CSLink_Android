<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/sfo_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/header_blue">

    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/btnbck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="back"
                android:padding="@dimen/seven_space"
                android:src="@drawable/back_arrow1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/five_all_side_padding"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/notification_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:onClick="onNotificationClicked"
                    android:padding="@dimen/seven_space"
                    android:src="@drawable/notification"/>
                <LinearLayout
                    android:id="@+id/badge_notification"
                    style="@style/linbadge"
                    android:layout_alignRight="@+id/notification"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <com.widget.textstyle.MyTextView_Signika_Regular
                        android:id="@+id/txtBadge_notification"
                        style="@style/badge"/>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:id="@+id/calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:onClick="onCalendarClicked"
                android:padding="@dimen/seven_space"
                android:src="@drawable/calendar_absent"/>
            <ImageView
                android:id="@+id/search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:onClick="onSearchClicked"
                android:padding="@dimen/seven_space"
                android:src="@drawable/search_white"/>
        </LinearLayout>

        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_top"
            android:layout_toLeftOf="@+id/rel_user_img"
            android:layout_toRightOf="@+id/btnbck"
            android:gravity="right|center_vertical"
            android:text="@string/sfo_homepage_title"
            android:textColor="@color/white_light"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relwrapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>