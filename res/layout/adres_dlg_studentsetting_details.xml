<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

  <!--  <include
        android:id="@+id/inc_header"
        layout="@layout/header_activity"
        />-->
    <ScrollView
        style="@style/scroll_bar"
        android:layout_above="@+id/lin_approval"
        android:padding="@dimen/ten_all_side_padding"
        ><!--android:layout_below="@+id/inc_header"-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="@dimen/large_profile_img_size"
                    android:layout_height="@dimen/large_profile_img_size"
                    android:layout_gravity="center"
                    >
                    <com.common.view.CircularImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_blue_full"
                        android:scaleType="fitXY"
                        />


                    <RelativeLayout
                        android:id="@+id/rel_up_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/imgPlus"
                            android:layout_width="@dimen/forty_margin"
                            android:layout_height="@dimen/forty_margin"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/adres_upload_image"/>

                        <com.widget.textstyle.MyTextView_Signika_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgPlus"
                            android:layout_centerHorizontal="true"
                            android:text="@string/upload_image"
                            android:textColor="@color/white_light"
                            android:textSize="@dimen/small_text_size"/>
                    </RelativeLayout>
                    <com.common.view.RoundedImageView
                        android:id="@+id/img_student_pic"
                        android:layout_width="@dimen/one_thirty_size"
                        android:layout_height="@dimen/one_thirty_size"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/three_space"
                        />

                </RelativeLayout>


                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Child name"
                    android:textColor="@color/color_blue_p"
                    android:textSize="@dimen/large_text_size"
                    />

                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txtClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:editable="true"
                    android:enabled="false"
                    android:padding="@dimen/three_space"
                    android:singleLine="true"
                    android:text="8A"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_size"
                android:orientation="horizontal"
                >

                <com.widget.textstyle.MyTextView_Signika_Semibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_info"
                    android:textAllCaps="true"
                    android:textColor="@color/color_blue_p"
                    android:textSize="@dimen/small_text_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_half_dpi"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/color_blue_p"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lytParent1name"
                style="@style/studnet_setting_detail"
                android:visibility="visible"
                android:weightSum="1"
                >

                <!-- Parent 1 start-->
                <LinearLayout
                    style="@style/profile_linear"
                    android:layout_weight="0.5">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/five_all_side_padding"
                               android:src="@drawable/parent1"/>
                    <com.widget.textstyle.MyTextView_Signika_Light
                        android:id="@+id/textView_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/five_all_side_padding"
                        android:text="@string/parent1"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/profile_linear"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <com.widget.textstyle.MyEditText_Signika_Bold
                        android:id="@+id/txtParent1Name"
                        style="@style/profile_edit"
                        android:maxLines="4"
                        android:textColor="@color/white_light"/>
                    <com.widget.textstyle.MyTextView_Signika_Light
                        android:id="@+id/txt_bloc_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:text="@string/block_user"
                        android:textColor="@color/yellow_home"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>
            <!-- Parent 1 End and Parent1 mobile -->

            <LinearLayout
                android:id="@+id/lytParent1mobile"
                style="@style/studnet_setting_detail"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout style="@style/profile_linear"
                              android:layout_weight="0.5">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/five_all_side_padding"
                               android:src="@drawable/mobile"/>
                    <com.widget.textstyle.MyTextView_Signika_Light
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/five_all_side_padding"
                        android:text="@string/str_mobile"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"
                        />
                </LinearLayout>
                <com.widget.textstyle.MyEditText_Signika_Bold
                    android:id="@+id/txtParent1Mobile"
                    style="@style/profile_edit"
                    android:singleLine="true"
                    android:layout_weight="0.5"
                    android:text="00000000"
                    android:textColor="@color/white_light"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>

            <LinearLayout
                android:id="@+id/lytParent2name"
                style="@style/studnet_setting_detail"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout style="@style/profile_linear"
                              android:layout_weight="0.5">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/five_all_side_padding"
                               android:src="@drawable/parent2"/>
                    <com.widget.textstyle.MyTextView_Signika_Light
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/five_all_side_padding"
                        android:text="@string/parent2"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/profile_linear"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <com.widget.textstyle.MyEditText_Signika_Bold
                        android:id="@+id/txtParent2Name"
                        style="@style/profile_edit"
                        android:textColor="@color/white_light"/>
                    <com.widget.textstyle.MyTextView_Signika_Light
                        android:id="@+id/txt_bloc_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:text="@string/block_user"
                        android:textColor="@color/yellow_home"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>

            <LinearLayout
                android:id="@+id/lytParent2mobile"
                style="@style/studnet_setting_detail"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout style="@style/profile_linear"
                              android:layout_weight="0.5">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="@dimen/five_all_side_padding"
                               android:src="@drawable/mobile"/>
                    <com.widget.textstyle.MyTextView_Signika_Light
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/five_all_side_padding"
                        android:text="@string/str_mobile"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"
                        />
                </LinearLayout>
                <com.widget.textstyle.MyEditText_Signika_Bold
                    android:id="@+id/txtParent2Mobile"
                    style="@style/profile_edit"
                    android:singleLine="true"
                    android:layout_weight="0.5"
                    android:textColor="@color/white_light"/>
            </LinearLayout>
            <View
                android:id="@+id/view_parent2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>
            <LinearLayout
                android:id="@+id/lytContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fiften_space"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="left|center"
                    android:padding="1dp"
                    android:text="@string/str_other_contact_name"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone"/>
                <com.widget.textstyle.MyEdiText_Signika_Regular
                    android:id="@+id/txtContactName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/liner_white_border"
                    android:editable="true"
                    android:enabled="true"
                    android:gravity="left|center"
                    android:padding="@dimen/five_all_side_padding"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size">
                </com.widget.textstyle.MyEdiText_Signika_Regular>
            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:id="@+id/lytContactNameSpace"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="0.1"-->
                <!--android:orientation="horizontal"/>-->
            <View
                android:id="@+id/view_othercontact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>
            <LinearLayout
                android:id="@+id/lytContactMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="left|center"
                    android:padding="1dp"
                    android:text="@string/str_other_contact_mobile"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/font_gray_blue"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone"/>
                <com.widget.textstyle.MyEdiText_Signika_Regular
                    android:id="@+id/txtContactMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/liner_white_border"
                    android:editable="true"
                    android:enabled="true"
                    android:gravity="left|center"
                    android:inputType="number"
                    android:maxLength="8"
                    android:padding="@dimen/five_all_side_padding"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size">
                </com.widget.textstyle.MyEdiText_Signika_Regular>
            </LinearLayout>
            <View
                android:id="@+id/view_parent3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>
            <LinearLayout
                android:id="@+id/ly_both"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:orientation="horizontal">

                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="@string/str_send_both_parent"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/small_text_size"/>
                <CheckBox
                    android:id="@+id/chkBoth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:button="@drawable/adres_checkbox_white_image"
                    android:gravity="right|center_vertical"
                    android:padding="@dimen/five_all_side_padding"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view_both"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_point_two"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:background="@color/view_light_blue"/>
            <LinearLayout
                android:id="@+id/lytBothSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:orientation="horizontal">

                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="@string/str_send_other_contact"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/small_text_size"/>
                <CheckBox
                    android:id="@+id/chkContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.9"
                    android:button="@drawable/adres_checkbox_white_image"
                    android:padding="@dimen/five_all_side_padding"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/lin_approval"
        style="@style/linearlayout_login"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/ten_all_side_padding"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/fiften_space"
        android:visibility="visible">

        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/btnClose"
            style="@style/student_approve"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_cmd_p"
            android:gravity="center_horizontal"
            android:minWidth="@dimen/one_twenty"
            android:text="@string/str_save"
            android:visibility="gone"
            />
        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/btnApprove"
            style="@style/student_approve"
            android:layout_marginRight="@dimen/ten_all_side_padding"
            android:layout_weight="0.5"
            android:background="@drawable/adres_green_backgroud_corner"
            android:text="@string/str_approve"
            android:visibility="visible"
            />
        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/btnReject"
            style="@style/student_approve"
            android:layout_marginLeft="@dimen/ten_all_side_padding"
            android:layout_weight="0.5"
            android:background="@drawable/adres_red_backgroud_corner"
            android:text="@string/str_reject"
            android:visibility="visible"
            />
    </LinearLayout>
</RelativeLayout>