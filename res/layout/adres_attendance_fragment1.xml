<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical"
              android:padding="@dimen/seventy_size" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lin_date_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txtDate"
                    style="@style/button"
                    android:layout_marginRight="@dimen/seven_space"
                    android:layout_weight="1"
                    android:background="@drawable/liner_white_border"
                    android:orientation="vertical"
                    android:text="@string/selectdate"
                    android:textSize="@dimen/normal_text_size">
                </com.widget.textstyle.MyTextView_Signika_Regular>

                <RelativeLayout
                    android:id="@+id/lytClass"
                    style="@style/button"
                    android:layout_marginLeft="@dimen/seven_space"
                    android:layout_weight="1"
                    android:background="@drawable/liner_white_border"
                    >
                    <Spinner
                        android:id="@+id/txtClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8A"
                        android:textColor="@color/white_light"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="match_parent"
                        android:popupTheme="@drawable/white_backgroud_corner_rec"
                        android:background="@null"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/five_all_side_padding"
                        android:focusable="false"
                        android:src="@drawable/dropdown"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/send"
            android:layout_below="@+id/lin_date_class"
            android:layout_marginTop="@dimen/fiften_space"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_all_side_padding"
                android:orientation="horizontal">
                <com.widget.textstyle.MyTextView_Signika_Bold
                    style="@style/linear_home"
                    android:layout_marginRight="@dimen/seven_space"
                    android:layout_weight="1.02"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_student_name"
                    android:textColor="@color/yellow_home"
                    android:textSize="@dimen/small_text_size"
                    />
                <com.widget.textstyle.MyTextView_Signika_Bold
                    style="@style/linear_home"
                    android:layout_marginLeft="@dimen/five_all_side_padding"
                    android:layout_weight="0.98"
                    android:gravity="left|center_vertical"
                    android:text="@string/str_lecture_records"
                    android:textColor="@color/yellow_home"
                    android:textSize="@dimen/small_text_size"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/lstStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stackFromBottom="false">
            </ListView>
        </LinearLayout>
        <!--android:transcriptMode="alwaysScroll"-->

        <LinearLayout
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/five_all_side_padding"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <com.widget.textstyle.MyTextView_Signika_Bold
                android:id="@+id/btnSave"
                style="@style/register_absent"
                android:layout_marginRight="@dimen/seven_space"
                android:text="@string/str_save"
                />

            <com.widget.textstyle.MyTextView_Signika_Bold
                android:id="@+id/btnSend"
                style="@style/register_absent"
                android:layout_marginLeft="@dimen/seven_space"
                android:text="@string/str_absentnotice"
                />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>