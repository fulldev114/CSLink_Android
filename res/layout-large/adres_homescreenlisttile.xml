<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/sixty_top"
              android:background="@drawable/change_list_bg"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/five_all_side_padding"
              android:paddingTop="@dimen/five_all_side_padding">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <!--<com.common.view.CircularImageView-->
        <!--android:layout_width="@dimen/profile_img_size"-->
        <!--android:layout_height="@dimen/profile_img_size"-->
        <!--android:id="@+id/imgPropile"-->
        <!--android:src="@drawable/cslink_avatar_unknown"-->
        <!--android:scaleType="fitXY"/>-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_alignParentLeft="true"
                      android:layout_toLeftOf="@+id/dropdown"
                      android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_all_side_padding"/>

            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:padding="@dimen/ten_all_side_padding"
                android:textSize="@dimen/normal_text_size"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/five_all_side_padding"
                android:orientation="vertical"
                >
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txtBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_badge"
                    android:gravity="center"
                    android:paddingLeft="@dimen/four_dp"
                    android:paddingRight="@dimen/four_dp"
                    android:text="1"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/badge_text_size"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/ten_all_side_padding"
            android:src="@drawable/adres_img_dropdown"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>