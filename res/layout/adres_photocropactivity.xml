<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootView"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.widget.textstyle.MyTextView_Signika_Regular
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_top"
            android:gravity="center"
            android:text="@string/str_photo_edit"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_text_size"
            />
        <LinearLayout
            android:id="@+id/btnbck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgback"
                android:layout_width="@dimen/thirty_top"
                android:layout_height="@dimen/btn_height"
                android:gravity="left"
                android:paddingBottom="@dimen/seven_space"
                android:paddingLeft="@dimen/ten_all_side_padding"
                android:paddingTop="@dimen/fiften_space"
                android:src="@drawable/ic_back"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txtDone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty_top"
                android:layout_marginRight="@dimen/ten_all_side_padding"
                android:gravity="center"
                android:text="@string/str_done"
                android:textColor="@color/color_white"
                android:textSize="@dimen/normal_text_size"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
