<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/rootView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/twenty_size"
                android:background="@drawable/alert_dialog_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/twenty_size"
                android:orientation="vertical"
                >

    <LinearLayout
        android:id="@+id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/userprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_leftright_corner_header_blue"
            android:orientation="horizontal"
            android:padding="@dimen/ten_all_side_padding"
            android:visibility="visible">
            <RelativeLayout
                android:id="@+id/rel_chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_all_side_padding">
                <com.common.view.CircularImageView
                    android:layout_width="@dimen/sixty_top"
                    android:layout_height="@dimen/sixty_top"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/circle_white_empty"/>
                <com.common.view.CircularImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/fifty_five"
                    android:layout_height="@dimen/fifty_five"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cslink_avatar_unknown"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_student_name"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/large_text_size"
                    />
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/text_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_class"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytFullDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_gray"
            android:gravity="center"
            android:orientation="horizontal">
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txtFullDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twelve_dp"
                android:gravity="center"
                android:text="@string/str_select_fullday"
                android:textColor="@color/color_dark_blue"
                android:textSize="@dimen/small_text_size"
                android:visibility="visible"
                />
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/imgFullDay"
                android:layout_width="@dimen/small_profile_img_size"
                android:layout_height="@dimen/small_profile_img_size"
                android:background="@drawable/adres_present_green"/>
        </LinearLayout>
    </LinearLayout>
  <!--  <ScrollView
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">-->
        <LinearLayout
            android:layout_above="@+id/lin_footer"
            android:layout_below="@+id/lin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ExpandableListView
                android:id="@+id/list_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@color/line_gray"
                android:dividerHeight="0.5dp"
                android:fadingEdge="none"
                android:groupIndicator="@null"
                android:indicatorLeft="@null"
                android:overScrollMode="never"
                android:scrollbars="none"/>

            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txtreason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_all_side_padding"
                android:gravity="center"
                android:textColor="@color/color_dark_blue"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone"
                />

          <!--  <ListView
                android:id="@+id/lstStudentDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:choiceMode="multipleChoice"
                android:divider="@color/line_gray"
                android:dividerHeight="0.5dp"
                android:padding="2dp"
                android:scrollbars="none"
                android:stackFromBottom="false"
                android:transcriptMode="alwaysScroll">
            </ListView>-->
        </LinearLayout>
    <!--</ScrollView>-->


    <LinearLayout
        android:id="@+id/lin_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/twenty_size"
        android:paddingRight="@dimen/twenty_size">

        <com.widget.textstyle.MyTextView_Signika_Regular
            android:id="@+id/btndone"
            style="@style/attendance_popup"
            android:layout_marginRight="@dimen/five_all_side_padding"
            android:text="@string/str_done_change"
            />

        <com.widget.textstyle.MyTextView_Signika_Regular
            android:id="@+id/txt_Cancel"
            style="@style/attendance_popup"
            android:layout_marginLeft="@dimen/five_all_side_padding"
            android:text="@string/cancel"
            />
    </LinearLayout>
</RelativeLayout>