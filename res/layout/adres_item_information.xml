<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/twenty_size"
              android:background="@drawable/alert_dialog_bg"
              android:orientation="vertical"
              android:padding="@dimen/ten_all_side_padding">

    <ScrollView
        style="@style/scroll_bar">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txt_heading_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/absent_note_heading"
                android:textColor="@color/color_dark_blue"
                android:textSize="@dimen/small_text_size"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/fiften_space"
                          android:gravity="center"
                          android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/menu_img_size"
                    android:layout_height="@dimen/menu_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/fiften_space"
                    android:src="@drawable/circle_green_full"
                    android:scaleType="fitXY"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txt_img_present"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="@string/reg_present"
                    android:textColor="@color/color_dark_blue"
                    android:textSize="@dimen/small_text_size"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/fiften_space"
                          android:gravity="center"
                          android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/menu_img_size"
                    android:layout_height="@dimen/menu_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/fiften_space"
                    android:src="@drawable/adres_circle_yellow_full"
                    android:scaleType="fitXY"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txt_img_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="@string/reg_notice"
                    android:textColor="@color/color_dark_blue"
                    android:textSize="@dimen/small_text_size"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/fiften_space"
                          android:gravity="center"
                          android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/menu_img_size"
                    android:layout_height="@dimen/menu_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/fiften_space"
                    android:src="@drawable/adres_circle_red_full"
                    android:scaleType="fitXY"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txt_img_absent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="@string/reg_absent"
                    android:textColor="@color/color_dark_blue"
                    android:textSize="@dimen/small_text_size"/>
            </LinearLayout>

            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txt_bottom_note1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/absent_note_bottom"
                android:layout_marginTop="@dimen/ten_all_side_padding"
                android:textColor="@color/color_dark_blue"
                android:textSize="@dimen/small_text_size"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>