<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:gravity="center"
                android:layout_margin="@dimen/seven_space">
                <com.common.view.CircularImageView
                    android:layout_width="@dimen/fifty_five"
                    android:layout_height="@dimen/fifty_five"
                    android:scaleType="fitXY"
                    android:src="@drawable/circle_yello_full"/>
                <com.common.view.CircularImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/fifty_top"
                    android:layout_height="@dimen/fifty_top"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cslink_avatar_unknown"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/linear_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <com.widget.textstyle.MyTextView_Signika_Bold
                                android:id="@+id/textView_teachername"
                                style="@style/rel_item"
                                android:layout_toRightOf="@+id/imageView1"
                                android:text="Ashish Sharma"
                                android:textColor="@color/yellow_home"
                                android:textSize="@dimen/normal_text_size"
                                />
                            <com.widget.textstyle.MyTextView_Signika_Regular
                                android:id="@+id/textView_subject"
                                style="@style/rel_item"
                                android:text="English"
                                android:textColor="@color/white_light"
                                android:textSize="@dimen/micro_text_size"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="horizontal"
                                android:paddingRight="20dp">

                                <com.widget.textstyle.MyTextView_Signika_Regular
                                    android:id="@+id/txtDate"
                                    style="@style/rel_item"
                                    android:gravity="right"
                                    android:text="2015-11-15"
                                    android:textColor="@color/light_green"
                                    android:textSize="@dimen/micro_text_size"/>
                                <com.widget.textstyle.MyTextView_Signika_Regular
                                    android:id="@+id/txtBadge"
                                    style="@style/rel_item"
                                    android:text="@string/time"
                                    android:textColor="@color/light_green"
                                    android:textSize="@dimen/micro_text_size"
                                    />
                            </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_half_dpi"
                    android:layout_alignLeft="@+id/linear_text"
                    android:layout_below="@+id/linear_text"
                    android:layout_marginTop="@dimen/fiften_space"
                    android:background="@color/white_light"/>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
