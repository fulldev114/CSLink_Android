<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left|center"
        android:padding="@dimen/three_space"
        android:orientation="horizontal">


        <!--<com.widget.textstyle.MyTextView_Signika_Regular
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="left|center"
            android:text="@string/number"
            android:textColor="@color/white_light"
            android:textSize="@dimen/normal_text_size"/>-->
        <ImageView
            android:id="@+id/img_mark"
            android:layout_width="@dimen/twenty_size"
            android:layout_height="@dimen/twenty_size"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/three_space"
            android:src="@drawable/green_image"/>

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="@dimen/twenty_size"
            android:layout_height="@dimen/twenty_size"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/three_space"
            android:src="@drawable/info_green"/>
        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/one_dp"
            android:layout_height="match_parent"
            android:background="@color/white_light"
            android:layout_marginLeft="@dimen/five_all_side_padding"/>
    </LinearLayout>

</LinearLayout>