<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_all_side_padding"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <ImageView
                style="@style/ImageAppLogog"
                android:layout_marginTop="@dimen/thirty_top"
                android:padding="0dp"
                android:src="@drawable/adres_side_csadm_logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                style="@style/linearlayout_login"
                >


                <LinearLayout
                    android:id="@+id/english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five_all_side_padding"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cmdn"
                    android:gravity="center">

                    <com.widget.textstyle.MyTextView_Signika_Bold
                        android:id="@+id/textView_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/ten_all_side_padding"
                        android:text="@string/language_english"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/eighteen_sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/norwgian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_all_side_padding"
                    android:layout_weight="1"
                    android:background="@drawable/liner_white_border"
                    android:gravity="center">

                    <com.widget.textstyle.MyTextView_Signika_Bold
                        android:id="@+id/textView_nowrgian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/ten_all_side_padding"
                        android:text="@string/language_norwgian"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/eighteen_sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/aboutus"
                style="@style/linearlayout_login"
                android:background="@drawable/btn_cmdn"
                android:minHeight="@dimen/btn_height"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <com.widget.textstyle.MyTextView_Signika_Bold
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/aboutus"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/twenty_one_size"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/five_all_side_padding"
                        android:layout_toRightOf="@+id/textView4"
                        android:src="@drawable/adres_aboutus"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/change_pincode"
                style="@style/linearlayout_login"
                android:layout_marginTop="@dimen/twenty_size"
                android:background="@drawable/liner_white_border"
                android:minHeight="@dimen/btn_height"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <com.widget.textstyle.MyTextView_Signika_Bold
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="@string/change_pincode"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/twenty_one_size"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/five_all_side_padding"
                        android:layout_toRightOf="@+id/textView5"
                        android:src="@drawable/pincode"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/forty_margin"
                android:layout_marginRight="@dimen/forty_margin"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:background="@drawable/liner_white_border"
                        android:gravity="center"
                        >

                        <com.widget.textstyle.MyTextView_Signika_Regular
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notification"
                            android:textColor="@color/white_light"
                            android:textSize="@dimen/textsize"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/five_all_side_padding"
                        android:layout_weight=".5"
                        android:background="@drawable/liner_white_border"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/three_space"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

