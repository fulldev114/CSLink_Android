<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/photo_options_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:gravity="center_horizontal"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/imgvlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/forty_margin"
        android:layout_marginBottom="@dimen/ten_all_side_padding"
        android:scaleType="fitXY"
        android:src="@drawable/logo_cslink"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_update"
        android:layout_below="@+id/imgvlogo"
        android:orientation="vertical"
        >

        <!-- <com.widget.textstyle.MyTextView_Signika_Bold
             android:id="@+id/txtDiaTitle"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:gravity="center"
             android:padding="10dp"
             android:text=""
             android:textColor="@color/white_light"
             android:textSize="@dimen/normal_text_size"
             android:visibility="visible"/>-->


        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/txtmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_size"
            android:gravity="center"
            android:padding="@dimen/fiften_space"
            android:textColor="@color/white_light"
            android:textSize="@dimen/large_text_size"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <com.widget.textstyle.MyButton_Signika_Regular
            android:id="@+id/btnupdate1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_top"
            android:layout_gravity="center"
            android:layout_margin="@dimen/twenty_size"
            android:minWidth="@dimen/one_twenty"
            android:background="@drawable/btn_cmd_p"
            android:inputType="textNoSuggestions"
            android:text=""
            android:textColor="@color/white_light"
            />


        <com.widget.textstyle.MyButton_Signika_Regular
            android:id="@+id/btnskip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_top"
            android:layout_gravity="center"
            android:layout_margin="@dimen/twenty_size"
            android:minWidth="@dimen/one_twenty"
            android:background="@drawable/btn_cmd_p"
            android:inputType="textNoSuggestions"
            android:text=""
            android:textColor="@color/white_light"
            />

    </LinearLayout>
</RelativeLayout>