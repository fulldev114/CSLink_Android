<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_all_side_padding">


        <com.common.view.CircularImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/menu_img_size"
            android:layout_height="@dimen/menu_img_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/message_history"
            android:visibility="gone"/>

        <com.widget.textstyle.MyTextView_Signika_Regular
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_history"
            android:textColor="@color/color_dark_blue"
            android:textSize="@dimen/small_text_size"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtMessage"
            android:layout_below="@+id/txtMessage"
            android:layout_marginTop="@dimen/ten_all_side_padding"
            android:orientation="horizontal">

            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/todate"
                android:textColor="@color/color_blue_p"
                android:textSize="@dimen/micro_text_size"
                />
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txtClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/str_class"
                android:textColor="@color/color_dark_blue"
                android:textSize="@dimen/micro_text_size"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/five_all_side_padding"
            android:orientation="vertical"
            >
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txtBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_badge"
                android:gravity="center"
                android:paddingLeft="@dimen/four_dp"
                android:paddingRight="@dimen/four_dp"
                android:text="0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/badge_text_size"
                android:visibility="gone"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
