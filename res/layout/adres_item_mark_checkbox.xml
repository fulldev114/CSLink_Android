<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/seven_space"
              android:paddingRight="@dimen/seven_space"
              android:paddingTop="@dimen/ten_all_side_padding"
    >

    <LinearLayout
        android:id="@+id/ly_sublist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/seven_space"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/lin_chk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox android:id="@+id/chk_item"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginRight="@dimen/five_all_side_padding"
                      android:background="@drawable/adres_checkbox_white_image"
                      android:button="@null"
                      android:gravity="center_vertical"
                      android:visibility="visible"/>
            <com.widget.textstyle.MyTextView_Signika_Regular
                android:id="@+id/txt_sub_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/three_space"
                android:text="@string/subject_name"
                android:textColor="@color/light_green"
                android:textSize="@dimen/normal_text_size"/>

        </LinearLayout>
        <!-- <CheckBox android:id="@+id/chk_item"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:button="@drawable/checkbox_white_image"
                   android:gravity="center_vertical"
                   android:textColor="@color/white_light"
                   android:textSize="@dimen/normal_text_size"
                   android:paddingRight="@dimen/five_all_side_padding"
                   android:layout_weight="0.44"
                   android:visibility="visible"/>
         <com.widget.textstyle.MyTextView_Signika_Regular
             android:id="@+id/txt_sub_nm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_weight="0.32"
             android:gravity="left|center_vertical"
             android:paddingRight="@dimen/five_all_side_padding"
             android:text="@string/subject_name"
             android:textColor="@color/light_green"
             android:textSize="@dimen/normal_text_size"/>-->


        <com.widget.textstyle.CustomGridView
            android:id="@+id/grid_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numColumns="2"
            android:layout_margin="@dimen/ten_all_side_padding"
            android:text="@string/marks"
            android:textColor="@color/white_light"
            android:textSize="@dimen/small_text_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dpi"
        android:layout_marginTop="@dimen/seven_space"
        android:background="@color/white_light"/>
</LinearLayout>