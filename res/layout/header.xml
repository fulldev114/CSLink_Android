<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/dark_blue"
              android:gravity="start"
              android:paddingTop="@dimen/seventy_size"
              android:paddingBottom="@dimen/menu_img_size"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Income"
        android:textSize="15dip"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical"
                >
                <com.common.view.CircularImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:scaleType="fitXY"
                    android:src="@drawable/cslink_avatar_unknown"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_all_side_padding"
                    android:gravity="center"
                    android:text="@string/str_parent"
                    android:layout_marginLeft="@dimen/five_all_side_padding"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/normal_text_size"
                    />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.6"
                >
                <ImageView
                    android:id="@+id/txtParent"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/ten_all_side_padding"
                    android:src="@drawable/logo_cslink"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
