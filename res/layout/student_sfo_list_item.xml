<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_all_side_padding"
        android:layout_marginBottom="@dimen/ten_all_side_padding"
        android:layout_marginLeft="@dimen/five_all_side_padding">

        <RelativeLayout
            android:id="@+id/student_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <com.common.view.CircularImageView
                android:id="@+id/img_outer"
                android:layout_width="@dimen/fifty_five"
                android:layout_height="@dimen/fifty_five"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/circle_blue_full"
                android:visibility="visible"/>
            <com.common.view.CircularImageView
                android:id="@+id/student_photo"
                android:layout_width="@dimen/fifty_top"
                android:layout_height="@dimen/fifty_top"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/cslink_avatar_unknown"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/student_image">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_right_arrow"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.widget.textstyle.MyTextView_Signika_Regular
                        android:id="@+id/textView_name"
                        style="@style/textview"
                        android:paddingTop="0dp"
                        android:text="Carron"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="bold"/>
                    <com.widget.textstyle.MyTextView_Signika_Regular
                        android:id="@+id/textView_class"
                        style="@style/textview"
                        android:paddingTop="0dp"
                        android:text="(1A)"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.widget.textstyle.MyTextView_Signika_Regular
                        android:id="@+id/textView_description"
                        style="@style/textview"
                        android:text="By Parent's(17:00),"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"/>
                    <ImageView
                        android:id="@+id/add_status"
                        android:layout_width="@dimen/thirty_top"
                        android:layout_height="@dimen/thirty_top"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/five_all_side_padding"
                        android:src="@drawable/add_red"/>
                    <com.widget.textstyle.MyTextView_Signika_Regular
                        android:id="@+id/textView_status"
                        style="@style/textview"
                        android:paddingTop="0dp"
                        android:text="(14:30)"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/normal_text_size"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_right_arrow"
                android:layout_width="@dimen/thirty_top"
                android:layout_height="@dimen/thirty_top"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/ten_all_side_padding"
                android:padding="@dimen/five_all_side_padding"
                android:rotation="180"
                android:src="@drawable/back_arrow1"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dpi"
        android:layout_alignLeft="@+id/linear_text"
        android:layout_below="@+id/linear_text"
        android:background="@color/color_line_blue"/>
</LinearLayout>
