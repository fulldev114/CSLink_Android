<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rel_sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:padding="@dimen/five_all_side_padding"
            android:src="@drawable/calendar"/>


        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/chk_item"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@null"
            android:text="name"
            android:textColor="@color/white_light"
            android:textSize="@dimen/normal_text_size"
            />


        <CheckBox android:id="@+id/chk_item"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:button="@drawable/checkbox_image_white"
                  android:clickable="false"
                  android:gravity="center_vertical"
                  android:padding="@dimen/five_all_side_padding"
                  android:textColor="@color/white_light"
                  android:textSize="@dimen/normal_text_size"
                  android:visibility="visible"/>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/half_dpi"
            android:layout_alignLeft="@+id/txt_name"
            android:layout_below="@+id/chk_item"
            android:layout_marginTop="@dimen/fiften_space"
            android:background="@color/white_light"/>
    </RelativeLayout>
</RelativeLayout>