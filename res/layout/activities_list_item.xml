<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_all_side_padding">
        <LinearLayout
            android:id="@+id/rel_date"
            android:layout_width="@dimen/fifty_top"
            android:layout_height="@dimen/fifty_top"
            android:layout_margin="@dimen/five_all_side_padding"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical">
            <com.widget.textstyle.MyTextView_Signika_Bold
                android:id="@+id/date_textview"
                style="@style/textview"
                android:gravity="center"
                android:text="24"
                android:textColor="@color/header_blue"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"/>
            <com.widget.textstyle.MyTextView_Signika_Bold
                android:id="@+id/month_textview"
                style="@style/textview"
                android:background="@color/header_blue"
                android:layout_margin="1dp"
                android:paddingTop="0dp"
                android:gravity="center"
                android:text="APR"
                android:textColor="@color/color_white"
                android:textSize="@dimen/micro_text_size"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linear_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rel_date">

            <LinearLayout
                style="@style/linear_margin_less"
                android:layout_toLeftOf="@+id/img_right_arrow"
                android:orientation="vertical">
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/textView_activityname"
                    style="@style/textview"
                    android:text="Swimming"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/twenty_size"
                        android:layout_height="@dimen/twenty_size"
                        android:src="@drawable/position" />
                    <com.widget.textstyle.MyTextView_Signika_Regular
                        android:id="@+id/textView_place"
                        style="@style/textview"
                        android:text="School Swimming Pool"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/small_text_size"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_right_arrow"
                android:layout_width="@dimen/thirty_top"
                android:layout_height="@dimen/thirty_top"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/ten_all_side_padding"
                android:padding="@dimen/five_all_side_padding"
                android:rotation="180"
                android:src="@drawable/back_arrow1"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dpi"
        android:layout_alignLeft="@+id/linear_text"
        android:layout_below="@+id/linear_text"
        android:layout_marginLeft="@dimen/thirty_top"
        android:background="@color/color_line_blue"/>
</LinearLayout>
