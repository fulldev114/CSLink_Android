<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_top"
        android:layout_alignParentBottom="true"
        android:minHeight="@dimen/btn_height"
        android:background="@color/dark_blue"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/messageGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:id="@+id/rel_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/img_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/message" />

                    <LinearLayout
                        android:id="@+id/linbadge_msg"
                        style="@style/linbadge"
                        android:layout_alignRight="@+id/img_message"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <com.widget.textstyle.MyTextView_Signika_Regular
                            android:id="@+id/txtBadge_msg"
                            style="@style/badge" />
                    </LinearLayout>
                </RelativeLayout>

                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_msg"
                    android:text="@string/message_title"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/micro_text_size"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/groupMessageGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:id="@+id/rel_group_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/img_group_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/group_message"/>

                    <LinearLayout
                        android:id="@+id/linbadge_group_msg"
                        style="@style/linbadge"
                        android:layout_alignRight="@+id/img_group_message"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <com.widget.textstyle.MyTextView_Signika_Regular
                            android:id="@+id/txtBadge_group_msg"
                            style="@style/badge" />
                    </LinearLayout>
                </RelativeLayout>
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_group_msg"
                    android:text="@string/group_message_title"
                    android:textColor="@color/light_green"
                    android:textSize="@dimen/micro_text_size"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activitiesGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:id="@+id/rel_activities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:id="@+id/img_activities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/activities"/>

                    <LinearLayout
                        android:id="@+id/linbadge_activities"
                        style="@style/linbadge"
                        android:layout_alignRight="@+id/img_activities"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <com.widget.textstyle.MyTextView_Signika_Regular
                            android:id="@+id/txtBadge_activities"
                            style="@style/badge" />
                    </LinearLayout>
                </RelativeLayout>

                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_activities"
                    android:text="@string/activities_title"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="@dimen/micro_text_size"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ten_all_side_padding"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
            <LinearLayout
                android:id="@+id/student_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/profile_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/before_button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/thirty_top"
                            android:layout_weight="1"
                            android:src="@drawable/back_left_arrow"
                            android:layout_gravity="center"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center">
                            <com.common.view.CircularImageView
                                android:layout_width="@dimen/big_profile_margin_size"
                                android:layout_height="@dimen/big_profile_margin_size"
                                android:layout_centerInParent="true"
                                android:src="@drawable/circle_blue_full"/>
                            <com.common.view.CircularImageView
                                android:id="@+id/student_photo"
                                android:layout_width="@dimen/big_profile_img_size"
                                android:layout_height="@dimen/big_profile_img_size"
                                android:layout_centerInParent="true"
                                android:src="@drawable/cslink_avatar_unknown"/>
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/next_button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/thirty_top"
                            android:layout_weight="1"
                            android:rotation="180"
                            android:src="@drawable/back_left_arrow"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <com.widget.textstyle.MyTextView_Signika_Bold
                        android:id="@+id/student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:text="Carron(1A)"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/twenty_one_size"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginTop="@dimen/five_all_side_padding"
                    android:layout_marginLeft="@dimen/seventy_size"
                    android:layout_marginRight="@dimen/seventy_size"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/checkedInGroup"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/five_all_side_padding"
                        android:background="@drawable/btn_cmdn"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.widget.textstyle.MyTextView_Signika_Bold
                            android:id="@+id/checkedInText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/five_all_side_padding"
                            android:text="@string/checked_in"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/checkedInIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/five_all_side_padding"
                            android:layout_toLeftOf="@+id/checkedInText"
                            android:src="@drawable/check_in"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/checkedOutGroup"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/btn_yellow"
                        android:layout_marginTop="@dimen/five_all_side_padding"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.widget.textstyle.MyTextView_Signika_Bold
                            android:id="@+id/checkedOutText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:text="@string/checked_out"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/checkedOutIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/five_all_side_padding"
                            android:layout_toLeftOf="@+id/checkedOutText"
                            android:src="@drawable/check_out"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingTop="1dp"
                android:layout_below="@id/topBar"
                android:background="@color/seperator_color"/>
            <RelativeLayout
                android:id="@+id/checked_in_status_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/checkedInStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:text="@string/checkedin_status_title"
                    android:textColor="@color/text_color_green"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"/>
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/checkedInStatusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="(14:30)"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingTop="1dp"
                android:layout_below="@id/topBar"
                android:background="@color/seperator_color"/>
            <RelativeLayout
                android:id="@+id/not_arrived_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/notarrivedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/not_arrived_title"
                    android:textColor="@color/red"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:layout_alignBaseline="@+id/notarrivedValue"
                    android:layout_alignBottom="@+id/notarrivedValue"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/notarrivedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="none"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingTop="1dp"
                android:layout_below="@id/topBar"
                android:background="@color/seperator_color"/>
            <RelativeLayout
                android:id="@+id/checked_out_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/checkedOutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:text="@string/checked_out_title"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"/>
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/checkedOutValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="Parents(17:30)"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/checkedOutEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/checkedOutValue"
                    android:layout_marginRight="@dimen/five_all_side_padding"
                    android:src="@drawable/edit_icon_yellow"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingTop="1dp"
                android:layout_below="@id/topBar"
                android:background="@color/seperator_color"/>
            <RelativeLayout
                android:id="@+id/activities_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/activitiesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:text="@string/activities_title"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"/>
                <com.widget.textstyle.MyTextView_Signika_Bold
                    android:id="@+id/activitiesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="none"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingTop="1dp"
                android:layout_below="@id/topBar"
                android:background="@color/seperator_color"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>