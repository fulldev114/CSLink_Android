<LinearLayout android:id="@+id/lin_header"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/header_blue"
        android:paddingBottom="@dimen/five_all_side_padding"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/btnbck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/seven_space"
                android:src="@drawable/back_left_arrow"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_user_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/five_all_side_padding"
            android:visibility="gone">
            <com.common.view.CircularImageView
                android:layout_width="@dimen/btn_height"
                android:layout_height="@dimen/btn_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/circle_blue_full"/>
            <com.common.view.CircularImageView
                android:id="@+id/img_pic"
                android:layout_width="@dimen/forty_margin"
                android:layout_height="@dimen/forty_margin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/cslink_avatar_unknown"/>
        </RelativeLayout>

        <com.widget.textstyle.MyTextView_Signika_Bold
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center" android:text="csadm"
            android:textColor="@color/white_light"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/userprofile" style="@style/linearheader"
            android:layout_marginBottom="@dimen/five_all_side_padding"
            android:layout_marginTop="@dimen/ten_all_side_padding"
            android:layout_toRightOf="@+id/btnbck"
            android:layout_toLeftOf="@+id/information"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rel_chat_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/ten_all_side_padding">
                <com.common.view.CircularImageView
                    android:layout_width="@dimen/fifty_top"
                    android:layout_height="@dimen/fifty_top"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/circle_blue_full"/>
                <com.common.view.CircularImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cslink_avatar_unknown"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_student_name"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/normal_text_size"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_class"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/small_text_size"/>
                <com.widget.textstyle.MyTextView_Signika_Regular
                    android:id="@+id/txt_typing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/micro_text_size"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView android:id="@+id/img_head"
                       android:layout_width="@dimen/fifty_five"
                       android:layout_height="match_parent"
                       android:gravity="right"
                       android:padding="@dimen/ten_all_side_padding"
                       android:src="@drawable/info"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/relwrapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"/>
</LinearLayout>